const { Scene, Layer, Circle} = spritevue.spritejs
const scene = new Scene('.playgroundPreview div', {
  displayRatio: 'auto'
});
const layer = scene.layer();

// 修改下方代码
const circle = new Circle();
circle.attr({
  pos: [100, 400],
  radius: 30,
  lineWidth: 1,
  color: 'red',
  anchor: [-0.5, 0],
  bgcolor: '#eee',
  anticlockwise: true,
  draggable: true // 设置可拖动
});

circle.on('mousemove', (evt) => {
  circle.attr('radius', 60);
  evt.stopDispatch();
});

circle.on('mouseleave', (evt) => {
  circle.attr('radius', 30);
  evt.stopDispatch();
});

layer.append(circle);